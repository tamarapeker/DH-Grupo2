<link rel="stylesheet" href="/stylesheets/forms.css">

<%-include('../partials/header', {title: 'Carrito'})%>
<main>
    <h2>Tu Compra</h2>
    <form action="" method="POST" class="forms formulario-carrito">
        <%for(let i=0 ; i < productsCart.length ; i++) { %>
        <article>
            <img src="/images/products/<%=productsCart[i].imagen%>" alt="Imagen de producto seleccionado">
            <p><%=productsCart[i].nombre%></p>
            <p><input type="number" name="cantidad" value="1" class="cantidad"></p>
            <p>$<%=productsCart[i].precio%></p>
        </article>
        <% } %>
        <article class="total-compra">
            <p>Total</p>
            <% var total = 0;
            if(productsCart == []){ %>
               <h2>El carrito esta vacio</h2> 
            <% } else {
            for(let i=0 ; i < productsCart.length ; i++) {
                total = total + productsCart[i].precio;
            } %>
            <p>$<%=total%></p>
            <% } %>
            
        </article>
        <button type="submit" class="confirmar-compra">Confirmar compra</button>
        <a href="/product">Seguir comprando</a>
    </form>
</main>
<%-include('../partials/footer')%>