<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/modals.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Libre+Franklin:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <script src="/js/avisos.js"></script>
    <title><%= title %> - Clover bazar & home</title>
</head>

<body>
    <header>
        <div class="barra1">

            <%if(!locals.isAuthenticated){%>
            <a href="/users/login">
                <div class="loginButton">
                    <button>Iniciar sesión</button>
                </div>
            </a>
            <a href="/users/register">
                <div class="loginButton">
                    <button>Registrarse</button>
                </div>
            </a>
            <%} else {%>
            <a href="/users/perfil/<%=locals.usuarioLogueado.id%>">
                <div class="loginButton">
                    <button>Hola <%=locals.usuarioLogueado.nombre%></button>
                </div>
            </a>

            <a href="/users/destroySession">
                <div class="loginButton">
                    <button>Cerrar sesión</button>
                </div>
            </a>
            <% } %>
            <%if(locals.adminLogueado){%>
            <a href="/products">
                <div class="loginButton">
                    <button>Listado</button>
                </div>
            </a>
            <% } %>
            <%if(!locals.isAuthenticated) {%>
                <!-- Trigger/Open The Modal -->
                <button id="myBtn" class="btn">
                 
                        <div class="cart">
                            <i class="fas fa-shopping-cart"></i>
                        </div>
         
                </button>

                <!-- The Modal -->
                <div id="myModal" class="modal">

                    <!-- Modal content -->
                    <div class="modal-content">
                        <span class="close">&times;</span>
                        <p>Debes loguearte para continuar</p>
                        <a href="/users/login">Iniciar sesion</a>
                    </div>

                </div>
            
            <%} else {%>
                <%if(locals.adminLogueado){%>
                    <div class="cart" style="display: none;">
                    </div>
                <%}else{%>
            <a href="/carts/<%=locals.usuarioLogueado.id%>">
                <div class="cart">
                    <i class="fas fa-shopping-cart"></i>
                </div>
            </a>
            <% } }%>
        </div>
        <div class="barra2">
            <a href="/">
                <div class="logo">
                    <img src="/images/logo.png" alt="logo clover">
                </div>
            </a>
            <nav>
                <ul>
                    <a href="/">
                        <li>Inicio</li>
                    </a>
                    <a href="/products/rubro">
                        <li>Productos</li>
                    </a>
                    <a href="/contacto">
                        <li>Contacto</li>
                    </a>
                    <a href="/mayorista">
                        <li>Mayorista</li>
                    </a>
                    <a href="/faqs">
                        <li>FAQs</li>
                    </a>
                </ul>
            </nav>
                <div class="menuysearch">
                    <form action="/search" method="GET" class="search-form">
                        <input type="text" name="keywords" placeholder="Buscar productos" class="search-form-input">
                        <button type="submit" class="search-form-button"><i class="fas fa-search"></i></button>
                    </form>
                </div>
                <div class="menu">
                    <label class="label-toggle" for="toggle">&#9776</label>
                    <input type="checkbox" id="toggle">
                    <nav class="menu-hamburguesa">
                        <a href="/products/rubro">Productos</a>
                        <a href="/contacto">Contacto</a>
                        <a href="/mayorista">Mayorista</a>
                        <a href="/faqs">FAQs</a>
                    </nav>
                </div>
        </div>
    </header>